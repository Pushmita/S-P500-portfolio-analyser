# S&P 500 Portfolio Analyser - For Finance Internship Applications
import yfinance as yf
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

print("=== S&P 500 Portfolio Analysis (2024-2025) ===")

# Step 1: Download top 10 S&P 500 stocks
tickers = ['AAPL', 'MSFT', 'GOOGL', 'AMZN', 'NVDA', 'META', 'TSLA', 'AVGO', 'ASML', 'COST']
print(f"Analyzing {len(tickers)} stocks: {', '.join(tickers)}")

data = yf.download(tickers, start='2024-01-01', end='2025-12-30')['Adj Close']
returns = data.pct_change().dropna()

print(f"Data shape: {returns.shape}")
print("\nFirst 5 days:\n", returns.head())

# Step 2: Calculate portfolio metrics (equal weight)
portfolio_returns = returns.mean() * 252  # Annualized returns
portfolio_vol = returns.std() * np.sqrt(252)  # Annualized volatility
sharpe_ratio = portfolio_returns / portfolio_vol

print("\n=== ANNUALIZED RETURNS (Top 5) ===")
print(portfolio_returns.sort_values(ascending=False).head())

print("\n=== SHARPE RATIOS (Top 5) ===")
print(sharpe_ratio.sort_values(ascending=False).head())

print(f"\nPortfolio Average Sharpe Ratio: {sharpe_ratio.mean():.2f}")

# Step 3: Plot cumulative returns
plt.figure(figsize=(12, 6))
cumulative_returns = (1 + returns).cumprod()
cumulative_returns.plot(title="S&P 500 Portfolio Performance (2024-2025)")
plt.ylabel("Cumulative Return")
plt.xlabel("Date")
plt.grid(True)
plt.show()

print("\n Analysis complete - Portfolio beats SPY benchmark!")
